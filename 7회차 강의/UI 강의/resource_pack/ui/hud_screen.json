{
  "namespace": "hud",
  "hud_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "inv@inv.inv": {}
          }
        ]
      }
    ]
  },
  "hud_actionbar_text": {
    "type": "image",
    "size": [ "100%c + 12px", "100%c + 5px" ],
    "offset": [ 0, "50%-68px" ],
    "texture": "textures/ui/hud_tip_text_background",
    "alpha": "@hud.anim_actionbar_text_background_alpha_out",
    "visible": "($actionbar_text > 'hp')",
    "controls": [
      {
        "actionbar_message": {
          "type": "label",
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "$tool_tip_text",
          "layer": 31,
          "text": "$actionbar_text",
          "localize": false,
          "alpha": "@hud.anim_actionbar_text_alpha_out"
        }
      }
    ]
  },

  "hotbar_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [
      180,
      33
    ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "controls": [
      {
        "hotbar_panel_@hud.hotbar_panel_": {
        }
      }
    ]
  },
  "hotbar_panel_": {
    "type": "panel",
    "size": [
      0,
      0
    ]
  },
  
  "gui_hotbar_grid_item_@hud.gui_hotbar_grid_item": {
    "size": [
      100,
      66
    ],
    "$hotbar_slot_selected_texture": "textures/ui/selected_hotbar_slot_0"
  },
  "gui_hotbar_grid_item_1@hud.gui_hotbar_grid_item_": {
