{
    "namespace": "watts",
    "shop@main_panel_no_buttons": {
        "size": [
            "100%",
            "100%"
        ],
        "$child_control": "item_shop"
    },
    "item_shop": {
        "type": "panel",
        "anchor_to": "top_left",
        "anchor_from": "top_left",
        "$show_background": false,
        "size": [
            "100%",
            "100%"
        ],
        "controls": [
            {
                "receipt@receipt.receipt": {}
            },
            {
                "item_list@item_list.item_list": {}
            },
            {
                "submit_button@common_buttons.light_text_button": {
                    "$pressed_button_name": "button.submit_custom_form",
                    "anchor_from": "bottom_right",
                    "anchor_to": "bottom_right",
                    "size": [
                        "25%",
                        "10%"
                    ],
                    "$button_text": "#submit_text",
                    "$button_text_binding_type": "global",
                    "$button_binding_condition": "once",
                    "bindings": [
                        {
                            "binding_name": "#submit_button_visible",
                            "binding_name_override": "#visible"
                        }
                    ]
                }
            }
        ]
    },
    "main_panel_no_buttons": {
        "type": "panel",
        "anchor_from": "center",
        "anchor_to": "center",
        "$text_name|default": "",
        "$show_close_button|default": true,
        "$use_compact_close_button|default": false,
        "$panel_indent_size|default": [
            "100% - 16px",
            "100% - 31px"
        ],
        "controls": [
            {
                "dialog_background@dialog_background": {}
            },
            {
                "title_label@common_dialogs.title_label": {}
            },
            {
                "panel_indent": {
                    "type": "panel",
                    "size": "$panel_indent_size",
                    "offset": [
                        0,
                        23
                    ],
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "controls": [
                        {
                            "inside_header_panel@$child_control": {}
                        }
                    ]
                }
            }
        ]
    },
    "dialog_background": {
        "size": [
            "100%",
            "100%"
        ],
        "type": "image",
        "texture": "textures/ui/Black",
        "layer": 2,
        "$fill_alpha|default": 0.2,
        "alpha": 0.4,
        "$dialog_background_texture|default": "textures/ui/White",
        "controls": [
            {
                "control": {
                    "type": "image",
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "texture": "$dialog_background_texture",
                    "layer": 1,
                    "$common_background_size|default": [
                        "100% - 16px",
                        "100%c - 27px"
                    ],
                    "$close_button_offset|default": [
                        6,
                        -21
                    ],
                    "size": "$common_background_size",
                    "offset": [
                        0,
                        7
                    ],
                    "alpha": "$fill_alpha",
                    "variables": [
                        {
                            "requires": "($show_close_button and $use_compact_close_button)",
                            "$common_background_size": [
                                "100% - 16px",
                                "100% - 19px"
                            ],
                            "$close_button_offset": [
                                6,
                                -13
                            ]
                        },
                        {
                            "requires": "(not $show_close_button)",
                            "$common_background_size": [
                                "100% - 16px",
                                "100% - 6px"
                            ]
                        }
                    ],
                    "controls": [
                        {
                            "close_button_holder@common_dialogs.common_close_button_holder": {}
                        },
                        {
                            "title_label@common_dialogs.title_label": {
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "offset": [
                                    0,
                                    -15
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}